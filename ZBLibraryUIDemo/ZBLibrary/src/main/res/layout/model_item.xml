<?xml version="1.0" encoding="utf-8"?>
<!-- Lemon added list中的item里不要用button等默认hasFocus的控件，以免onItemClick事件无响应 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/content_item"
    android:background="@drawable/bg_item_to_alpha" >

    <ImageView
        android:id="@+id/ivHead"
        style="@style/content_item_lf_img"
        android:padding="6dp"
        android:src="@drawable/add" />

    <TextView
        android:id="@+id/tvName"
        style="@style/content_item_lf_tv"
        android:layout_weight="1"
        android:text="item" />

    <TextView
        android:id="@+id/tvNumber"
        style="@style/content_item_rt_tv"
        android:text="right text" />

    <ImageView style="@style/content_item_rt_img" />

</LinearLayout>