<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout style="@style/topbar_bg" >

        <TextView
            android:id="@+id/tvAboutTitle"
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="关于" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/match_match"
        android:layout_weight="1" >

        <ScrollView style="@style/match_match" >

            <LinearLayout style="@style/ll_vertical_match_match" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    style="@style/text_big_black"
                    android:layout_marginBottom="30dp"
                    android:text="坐标标准库\n2.0" />

                <LinearLayout
                    android:id="@+id/llAboutZBLibraryMainActivity"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="ZBLibrary" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/llAboutBottomTabActivity"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="BottomTabActivity" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="@dimen/common_item_padding_bottom" />

                <LinearLayout
                    android:id="@+id/llAboutShare"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="分享" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/llAboutComment"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="赏5星好评" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="@dimen/common_item_padding_bottom" />

                <LinearLayout
                    android:id="@+id/llAboutDeveloper"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:text="开发者" />

                    <TextView
                        style="@style/content_item_rt_tv"
                        android:layout_weight="1"
                        android:text="Tommy Lemon" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/llAboutWeibo"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="博客" />

                    <TextView
                        style="@style/content_item_rt_tv"
                        android:layout_weight="1"
                        android:text="weibo.com/5225556360" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/llAboutContactUs"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:text="联系我们" />

                    <TextView
                        style="@style/content_item_rt_tv"
                        android:layout_weight="1"
                        android:text="1184482681@qq.com" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="60dp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>