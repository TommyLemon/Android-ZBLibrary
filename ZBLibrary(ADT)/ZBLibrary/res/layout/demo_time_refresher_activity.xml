<?xml version="1.0" encoding="utf-8"?>
<!-- 使用方法：复制>粘贴>改名>改代码（id必须改，不要和其它类的id重复） -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout style="@style/topbar_bg" >

        <ImageView
            android:id="@+id/ivDemoTimeRefresherReturn"
            style="@style/topbar_return_img" />

        <TextView
            android:id="@+id/tvDemoTimeRefresherTitle"
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="使用时间刷新器" />

        <ImageView
            android:id="@+id/ivDemoTimeRefresherForward"
            style="@style/topbar_right_btn"
            android:src="@drawable/delete_light" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDemoTimeRefresherCount"
        style="@style/match_match"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/blue"
        android:textSize="90sp" />

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout style="@style/edit_item" >

        <EditText
            android:id="@+id/etDemoTimeRefresher"
            style="@style/edit_item_right_et"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:hint="请输入时间间隔"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="6dp" />

        <ImageButton
            android:id="@+id/ibtnDemoTimeRefresher"
            style="@style/img_btn"
            android:background="@drawable/bg_item_to_alpha"
            android:padding="6dp"
            android:src="@drawable/forward_light" />
    </LinearLayout>

</LinearLayout>
